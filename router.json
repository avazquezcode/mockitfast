{
  "endpoints": [
    {
      "path": "/api/v1/{id}/users",
      "name": "Create a user",
      "description": "Create a user",
      "method": "GET",
      "response": {
        "status": 200,
        "headers": {
          "Content-Type": "application/json",
          "Cache-Control": "no-cache"
        },
        "body": {
          "{id}_users": {
            "id": 2,
            "name": "John {id}"
          }
        }
      }
    },
    {
      "path": "/api/v1/users",
      "description": "Get all users ",
      "method": "GET",
      "response": {
        "status": 200,
        "headers": {
          "Content-Type": "application/json"
        },
        "body": {
          "users": [
            {
              "id": 1,
              "name": "John Doe"
            },
            {
              "id": 2,
              "name": "Jane Doe"
            }
          ]
        }
      }
    },
    {
      "path": "/api/v1/redirect",
      "description": "Example of a redirect",
      "method": "GET",
      "response": {
        "headers": {
          "Content-Type": "redirect",
          "location": "http://google.com"
        },
        "status": 307
      }
    },
    {
      "path": "/api/v1/plain",
      "description": "Plain response example",
      "method": "GET",
      "response": {
        "status": 200,
        "headers": {
          "Content-Type": "text/plain",
          "Cache-Control": "no-cache"
        },
        "body": "This is a plain text"
      }
    },
    {
      "path": "/api/v1/test/{user_id}/hey",
      "description": "Plain response example",
      "method": "GET",
      "response": {
        "status": 200,
        "headers": {
          "Content-Type": "text/plain",
          "Cache-Control": "no-cache"
        },
        "body": "This is a plain {user_id} text"
      }
    },
    {
      "path": "/html",
      "description": "HTML",
      "method": "GET",
      "response": {
        "status": 200,
        "headers": {
          "Content-Type": "text/html",
          "Cache-Control": "no-cache"
        },
        "body": "<p>hey</p>"
      }
    },
    {
      "path": "/xml",
      "description": "XML",
      "method": "GET",
      "response": {
        "status": 200,
        "headers": {
          "Content-Type": "application/xml",
          "Cache-Control": "no-cache"
        },
        "body": "<accounts></accounts>"
      }
    }
  ]
}
